# ============================================
# TMDB API Configuration
# ============================================
# Copia este archivo a .env y configura tus valores

# TMDB API Key (obligatorio)
# Obtén tu API key en: https://www.themoviedb.org/settings/api
# 1. Regístrate en https://www.themoviedb.org/signup
# 2. Ve a Settings > API
# 3. Solicita una API Key (Developer)
# 4. Copia la "API Key (v3 auth)"
VITE_TMDB_API_KEY=tu_api_key_aqui

# TMDB API Version (opcional, por defecto: 3)
VITE_TMDB_API_VERSION=3

# TMDB Base URLs (opcional, normalmente no necesitas cambiar estos)
VITE_TMDB_BASE_URL=https://api.themoviedb.org/3
VITE_TMDB_IMAGE_BASE_URL=https://image.tmdb.org/t/p

# ============================================
# Image Configuration
# ============================================

# Tamaños de imagen para posters (opcional)
# Opciones: w92, w154, w185, w342, w500, w780, original
VITE_TMDB_IMAGE_SIZE_POSTER=w500

# Tamaño para backdrops/fondos (opcional)
# Opciones: w300, w780, w1280, original
VITE_TMDB_IMAGE_SIZE_BACKDROP=original

# Tamaño para stills de episodios (opcional)
VITE_TMDB_IMAGE_SIZE_STILL=w300

# ============================================
# Rate Limiting & Performance
# ============================================

# Retraso entre peticiones en ms (opcional, por defecto: 100)
# TMDB permite aproximadamente 3 requests por segundo para cuentas free
VITE_TMDB_REQUEST_DELAY=100

# Máximo de reintentos en caso de error (opcional, por defecto: 3)
VITE_TMDB_MAX_RETRIES=3

# ============================================
# Cache Configuration
# ============================================

# Habilitar caché en memoria (opcional, por defecto: true)
VITE_ENABLE_CACHE=true

# Tiempo de vida del caché en ms (opcional, por defecto: 300000 = 5 minutos)
VITE_CACHE_TTL=300000

# ============================================
# Feature Flags
# ============================================

# Mostrar trailers en página de detalle (opcional, por defecto: true)
VITE_SHOW_TRAILERS=true

# Habilitar búsqueda de personas (opcional, por defecto: false)
VITE_ENABLE_PEOPLE_SEARCH=false
